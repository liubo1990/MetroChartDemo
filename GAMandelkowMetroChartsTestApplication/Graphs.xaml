<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:GAGraph="clr-namespace:De.TorstenMandelkow.MetroChart;assembly=De.TorstenMandelkow.MetroChart">
 
    
        <!-- for windows 8 it is different: xmlns:chart="using:De.TorstenMandelkow.MetroChart" -->

    <Style x:Key="MinimalChartStyle" TargetType="GAGraph:ChartBase">
            <Setter Property="Width" Value="350"/>
            <Setter Property="Height" Value="350"/>
        <Setter Property="Margin" Value="10 10 10 10"/>
        </Style>
    
    <Style x:Key="GALineStyle" TargetType="Path" >
        <Setter Property="StrokeThickness" Value="1"></Setter>
        <Setter Property="Stroke" Value="Black"></Setter>
    </Style>

    <Style x:Key="GAScatterBulletStyle" TargetType="Rectangle" >
        <Setter Property="Height" Value="5"></Setter>
        <Setter Property="Width" Value="5"></Setter>
        <Setter Property="RadiusX" Value="2.5"></Setter>
        <Setter Property="RadiusY" Value="2.5"></Setter>
        <Setter Property="Fill" Value="Aquamarine"></Setter>
        <!--set to any value to have it filled, leav blank for line only, the value is ignored-->
    </Style>

</ResourceDictionary>