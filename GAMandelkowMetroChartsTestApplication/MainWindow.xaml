<Window x:Class="GAMandelkowMetroChartsTestApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="912.537" Width="1361.194"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        xmlns:GAChart="clr-namespace:GravityApps.Mandelkow.MetroCharts;assembly=GravityApps.Mandelkow.MetroCharts" WindowStartupLocation="CenterScreen"
        
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="160" MinWidth="160"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Vertical" Background="#FFE4E4E4" Margin="0">
            <TextBlock Style="{StaticResource LargeTitleStyle}" Margin="20,10,0,0"><Run Text="GravityApps-Mandelkow Metro Charts Demo"/></TextBlock>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Style="{StaticResource MediumTitleStyle}" Margin="20,0,0,0" VerticalAlignment="Bottom"><Run Text="Main charts by Torsten Mandlekow"/></TextBlock>
                <TextBlock Style="{StaticResource SmallTitleStyle}" VerticalAlignment="Top" Margin="5,5,0,0"><Run Text="(www.modernuicharts.codeplex.com)"/></TextBlock>
                <TextBlock Style="{StaticResource MediumTitleStyle}" VerticalAlignment="Bottom"><Run Text=" "/><Run Text="Line, Scatter and multiple-series charts by GravityApps"/></TextBlock>
            </StackPanel>
            <WrapPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,5,0,0">

                <GAChart:ClusteredColumnChart Style="{StaticResource MinimalChartStyle}" DataContext="{Binding}" 
                                              ChartTitle="Clustered Column Chart"
                                              ChartSubTitle="Now supports negative numbers"
                                             
                                          >
                    <GAChart:ClusteredColumnChart.Series>
                        <GAChart:ChartSeries
							SeriesTitle="{Binding scatterData.seriesDisplayName}"
							DisplayMember="date"
							ValueMember="amount"
							ItemsSource="{Binding scatterData.Items}" 
                    />

                    </GAChart:ClusteredColumnChart.Series>
                </GAChart:ClusteredColumnChart>

                <GAChart:StackedColumnChart Style="{StaticResource MinimalChartStyle}"  DataContext="{Binding}"
                                            ChartTitle="Stacked Column Chart" ChartSubTitle="Doesnt support negative numbers"
                                           >
                    <GAChart:StackedColumnChart.Series>
                        <GAChart:ChartSeries
							SeriesTitle="{Binding scatterData2.seriesDisplayName}"
							DisplayMember="date"
							ValueMember="amount"
							ItemsSource="{Binding scatterData2.Items}" 
                    />
                    </GAChart:StackedColumnChart.Series>
                </GAChart:StackedColumnChart>

                <GAChart:PieChart
					Style="{StaticResource MinimalChartStyle}"
					DataContext="{Binding}"
					ChartTitle="Pie Chart"
					ChartSubTitle="Standard Mandelkow Pie Chart"
        >
                    <GAChart:PieChart.Series>
                        <GAChart:ChartSeries
							SeriesTitle="{Binding scatterData2.seriesDisplayName}"
							DisplayMember="date"
							ValueMember="amount"
							ItemsSource="{Binding scatterData2.Items}" 
                    />
                    </GAChart:PieChart.Series>
                </GAChart:PieChart>



                <GAChart:GALineScatterChart
           Style="{StaticResource MinimalChartStyle}"
            DataContext="{Binding }"
            ChartTitle="GA Line/Scatter Chart" 
            ChartSubTitle="three series - custom styles, Line and Both types"
                    IsRowColumnSwitched="{Binding seriesSwitched}"
            >
                    <GAChart:GALineScatterChart.Series >
                        <GAChart:ChartSeries
                    SeriesTitle="{Binding scatterData.seriesDisplayName}"
                    DisplayMember="date"
                    ValueMember="amount"
                    ItemsSource="{Binding scatterData.Items}"
                    SeriesType="Both"
                    SeriesBulletStyle="{StaticResource NotFilledCircleStyle}"
                    >
                        </GAChart:ChartSeries>
                        <GAChart:ChartSeries
                    SeriesTitle="{Binding scatterData1.seriesDisplayName}"
                    DisplayMember="date"
                    ValueMember="amount"
                    ItemsSource="{Binding scatterData1.Items}"
                    SeriesType="Both"
                    SeriesBulletStyle="{StaticResource RectangleFilledStyle}"
                    SeriesLineStyle="{StaticResource BlackLineRedFillStyle }"
                    >
                        </GAChart:ChartSeries>
                        <GAChart:ChartSeries
                    SeriesTitle="{Binding scatterData2.seriesDisplayName}"
                    DisplayMember="date"
                    ValueMember="amount"
                    ItemsSource="{Binding scatterData2.Items}"
                    SeriesType="Both"
                     SeriesBulletStyle="{StaticResource GATransparentScatterBulletStyle}"
                    >
                        </GAChart:ChartSeries>
                    </GAChart:GALineScatterChart.Series>
                </GAChart:GALineScatterChart>
                
               
                
                   
                    <GAChart:GALineScatterChart  Style="{StaticResource MinimalChartStyle}"
              
						DataContext="{Binding ''}"
						ChartTitle="GA Line/Scatter Chart" 
						ChartSubTitle="three series - default styles."
						IsRowColumnSwitched="{Binding seriesSwitched}" HorizontalAlignment="Left" VerticalAlignment="Top"
                >
                        <GAChart:GALineScatterChart.Series >
                            <GAChart:ChartSeries
								SeriesTitle="{Binding scatterData.seriesDisplayName}"
								DisplayMember="date"
								ValueMember="amount"
								ItemsSource="{Binding scatterData.Items}"
								SeriesType="Both"
                        />
                            <GAChart:ChartSeries
								SeriesTitle="{Binding scatterData1.seriesDisplayName}"
								DisplayMember="date"
								ValueMember="amount"
								SeriesType="Bullet"
								ItemsSource="{Binding scatterData1.Items}"
                            
                        />
                            <GAChart:ChartSeries
								SeriesTitle="{Binding scatterData2.seriesDisplayName}"
								DisplayMember="date"
								ValueMember="amount"
								ItemsSource="{Binding scatterData2.Items}"
								SeriesType="Line"
                    />
                        </GAChart:GALineScatterChart.Series>
                    </GAChart:GALineScatterChart>

                <GAChart:RadialGaugeChart
					Style="{StaticResource MinimalChartStyle}"
					DataContext="{Binding}"
					ChartTitle="Guage Chart"
					ChartSubTitle="Standard Mandelkow Guage Chart"
        >
                    <GAChart:RadialGaugeChart.Series>
                        <GAChart:ChartSeries
							SeriesTitle="{Binding radialSeries.seriesDisplayName}"
							DisplayMember="date"
							ValueMember="amount"
							ItemsSource="{Binding radialSeries.Items}" 
                    />
                    </GAChart:RadialGaugeChart.Series>
                </GAChart:RadialGaugeChart>




            </WrapPanel>
            <Button Command="{Binding SwitchSeries, Mode=OneWay}" Content="Switch Series" Margin="201,0,577,0"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Vertical"  Background="#FFC9C9C9" Margin="0,0,0,0" >
            <TextBlock Style="{StaticResource MediumTitleStyle}" HorizontalAlignment="Center"><Run Text="Setting"/></TextBlock>
            <ListView ItemsSource="{Binding scatterData.Items}" Height="243">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid DataContext="{Binding}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="75      "/>
                                <ColumnDefinition Width="75 "/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="{Binding date}"/>
                            <TextBox Grid.Column="1" Text="{Binding amount}" HorizontalContentAlignment="Right"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
            <ListView ItemsSource="{Binding scatterData2.Items}" Height="243">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid DataContext="{Binding}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="75      "/>
                                <ColumnDefinition Width="75 "/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="{Binding date}"/>
                            <TextBox Grid.Column="1" Text="{Binding amount}" HorizontalContentAlignment="Right"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ListView ItemsSource="{Binding scatterData2.Items}" Height="243">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid DataContext="{Binding}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="75      "/>
                                    <ColumnDefinition Width="75 "/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Content="{Binding date}"/>
                                <TextBox Grid.Column="1" Text="{Binding amount}" HorizontalContentAlignment="Right"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
        </StackPanel>


    </Grid>

</Window>

