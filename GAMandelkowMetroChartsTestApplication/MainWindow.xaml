<Window x:Class="GAMandelkowMetroChartsTestApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        xmlns:GAChart="clr-namespace:De.TorstenMandelkow.MetroChart;assembly=De.TorstenMandelkow.MetroChart" Background="#FFC1C0C0"
        
        >

    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" >
        <GAChart:PieChart
            Style="{StaticResource MinimalChartStyle}"
            DataContext="{Binding}"
        ChartTitle="Pie Chart"
        ChartSubTitle="Standard Mandelkow Pie Chart"
        >
            <GAChart:PieChart.Series>
                <GAChart:ChartSeries
                  SeriesTitle="{Binding scatterData.seriesDisplayName}"
                    DisplayMember="date"
                    ValueMember="amount"
                    ItemsSource="{Binding scatterData.Items}" />
            </GAChart:PieChart.Series>
        </GAChart:PieChart>
