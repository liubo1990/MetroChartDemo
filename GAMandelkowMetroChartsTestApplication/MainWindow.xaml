<Window x:Class="GAMandelkowMetroChartsTestApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="986.269" Width="1255.224"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        xmlns:GAChart="clr-namespace:GravityApps.Mandelkow.MetroCharts;assembly=GravityApps.Mandelkow.MetroCharts"
        
        >

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" >
        <GAChart:PieChart
            Style="{StaticResource MinimalChartStyle}"
            DataContext="{Binding}"
        ChartTitle="Pie Chart"
        ChartSubTitle="Standard Mandelkow Pie Chart"
        >
            <GAChart:PieChart.Series>
                <GAChart:ChartSeries
                  SeriesTitle="{Binding scatterData.seriesDisplayName}"
                    DisplayMember="date"
                    ValueMember="amount"
                    ItemsSource="{Binding scatterData.Items}" 
                    />
            </GAChart:PieChart.Series>
        </GAChart:PieChart>


        <StackPanel Orientation="Vertical">
            <GAChart:GALineScatterChart
               Style="{StaticResource MinimalChartStyle}"
                DataContext="{Binding }"
                ChartTitle="GA Line/Scatter Chart" 
                ChartSubTitle="three series - default styles."
                >
                <GAChart:GALineScatterChart.Series >
                    <GAChart:ChartSeries
                        SeriesTitle="{Binding scatterData.seriesDisplayName}"
                        DisplayMember="date"
                        ValueMember="amount"
                        ItemsSource="{Binding scatterData.Items}"
                        SeriesType="Both"
                        >
                    </GAChart:ChartSeries>
                    <GAChart:ChartSeries
                        SeriesTitle="{Binding scatterData1.seriesDisplayName}"
                        DisplayMember="date"
                        ValueMember="amount"
                        ItemsSource="{Binding scatterData1.Items}"
                        SeriesType="Bullet"
                        >
                    </GAChart:ChartSeries>
                    <GAChart:ChartSeries
                    SeriesTitle="{Binding scatterData2.seriesDisplayName}"
                    DisplayMember="date"
                    ValueMember="amount"
                    ItemsSource="{Binding scatterData2.Items}"
                    SeriesType="Line"
                    >
                    </GAChart:ChartSeries>
                </GAChart:GALineScatterChart.Series>
            </GAChart:GALineScatterChart>

            
            <!--<Expander Header="Show Styling">
                <TextBlock></TextBlock>
            </Expander>-->
        </StackPanel>
        
        <GAChart:GALineScatterChart
           Style="{StaticResource MinimalChartStyle}"
            DataContext="{Binding }"
            ChartTitle="GA Line/Scatter Chart" 
            ChartSubTitle="three series - custom styles, Line and Both types"
            >
            <GAChart:GALineScatterChart.Series >
                <GAChart:ChartSeries
                    SeriesTitle="{Binding scatterData.seriesDisplayName}"
                    DisplayMember="date"
                    ValueMember="amount"
                    ItemsSource="{Binding scatterData.Items}"
                    SeriesType="Both"
                    SeriesBulletStyle="{StaticResource NotFilledCircleStyle}"
                    >
                </GAChart:ChartSeries>
                <GAChart:ChartSeries
                    SeriesTitle="{Binding scatterData1.seriesDisplayName}"
                    DisplayMember="date"
                    ValueMember="amount"
                    ItemsSource="{Binding scatterData1.Items}"
                    SeriesType="Both"
                    SeriesBulletStyle="{StaticResource RectangleFilledStyle}"
                    SeriesLineStyle="{StaticResource BlackLineRedFillStyle }"
                    >
                </GAChart:ChartSeries>
                <GAChart:ChartSeries
                    SeriesTitle="{Binding scatterData2.seriesDisplayName}"
                    DisplayMember="date"
                    ValueMember="amount"
                    ItemsSource="{Binding scatterData2.Items}"
                    SeriesType="Both"
                     SeriesBulletStyle="{StaticResource GATransparentScatterBulletStyle}"
                    >
                </GAChart:ChartSeries>
            </GAChart:GALineScatterChart.Series>
        </GAChart:GALineScatterChart>
    </StackPanel>
</Window>

